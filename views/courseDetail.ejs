<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Detail Kursus</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Inter", sans-serif;
      }
    </style>
  </head>
  <body class="bg-gradient-to-b from-gray-100 to-gray-200 min-h-screen">
    <%- include('partials/navbar', { isLoggedIn }) %>

    <div class="container mx-auto px-6 py-10">
      <div class="bg-white rounded-xl shadow-md p-8 max-w-4xl mx-auto">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">
          <%= course.name %>
        </h1>
        <p class="text-gray-600 text-lg mb-4 leading-relaxed">
          <%= course.description %>
        </p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-gray-600 mb-6">
          <p>
            <span class="font-semibold">Durasi:</span> <%= course.courseInfo %>
          </p>
          <p>
            <span class="font-semibold">Dibuat Pada:</span> <%=
            formatDate(course.createdAt) %>
          </p>
          <p>
            <span class="font-semibold">Jumlah Pelajaran:</span> <%= lessonCount
            %>
          </p>
          <p>
            <span class="font-semibold">Kategori:</span> <%=
            course.Categories.map(cat => cat.name).join(', ') %>
          </p>
        </div>
        <button
          type="button"
          onclick="window.location.href='/payment?courseId=<%= course.id %>'"
          class="bg-blue-600 text-white py-3 px-6 rounded-lg font-medium hover:bg-blue-700 transition"
        >
          Daftar Sekarang
        </button>
      </div>

      <h2 class="text-2xl font-bold text-gray-800 mt-10 mb-6">
        Pelajaran dalam Kursus Ini
      </h2>
      <div class="space-y-6">
        <% course.Lessons.forEach(lesson => { %>
        <div
          class="bg-white rounded-lg shadow-sm p-6 hover:shadow-md transition"
        >
          <h3 class="text-xl font-semibold text-gray-800">
            <%= lesson.title %>
          </h3>
          <p class="text-gray-600 mt-2"><%= lesson.content %></p>
          <p class="text-gray-500 text-sm mt-2">
            Dibuat Pada: <%= formatDate(lesson.createdAt) %>
          </p>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
